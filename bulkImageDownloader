from pixabay import Image
import json
import requests
import shutil
API_KEY = '#replace with pixabay api'  #search google

# image operations

image = Image(API_KEY)
# custom image search
print("Enter the images you want to download")
query=input()
ims = image.search(q=query,
             lang='es',
             image_type='photo',
             orientation='horizontal',
             page=1,
             per_page=10)

#ims["hits"][0]["largeImageURL"]
i=0
while i<len(ims["hits"]):
    url=ims["hits"][i]["largeImageURL"]
    resp = requests.get(url, stream=True)
    local_file = open(str(i)+'_'+'test.jpg', 'wb')
    resp.raw.decode_content = True
    shutil.copyfileobj(resp.raw, local_file)
    i+=1
